<div class="container center">
	<%= @product.on_hold? ? raw("<script>swal({ title: 'Aun no se han registrado las porciones para este producto', text:'Por favor registralas para que puedan ser utilizadas por los usuarios', type: 'error'})</script>") : "" %>
	<h1 style="display: inline-block; margin-right: 15px"><%= @product.nombre %> - <%= link_to "<i class = 'fi-pencil be-icon-green medium'></i>".html_safe, edit_product_path(@product) %> - </h1><%= link_to "<i class = 'fi-trash medium be-icon-red' style='display: inline-block;'></i>".html_safe, product_path(@product), method: :delete %>
	<div class="field">
		<%= image_tag @product.image.url(:web) %>
	</div>
	<p>
		<h3>Contenido: </h3>
		<%= @product.cantidad %><%= @product.measure.abrebiacion%>
	</p>
	<p>
		<h3>Calor√≠as: </h3>
		<%= @product.calorias %>
	</p>
	<p>
		<h3>Codigo: </h3>
		<%= @product.codigo %>
	</p>
</div>
