<div class="card big-padding form">
  <h2>Cambiar contraseña</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="input-field">
    <%= f.label :password, "Nueva contraseña" %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
    <% if @minimum_password_length %>
    <br />
    <em>(Caracteres mínimos: <%= @minimum_password_length %>)</em><br />
    <% end %>
  </div>

  <div class="input-field">
    <%= f.label :password_confirmation, "Confirma tu nueva contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="action center">
    <%= f.submit "Cambiar contraseña", class: 'btn' %>
  </div>
  <% end %>
</div>
<div class="center top-space">
  <%= render "devise/shared/links" %>
</div>
