<div class="card form big-padding">	
	<h2>¿Olvidaste tu contraseña?</h2>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	<% if resource.errors.any? %>
  <div class="alert">
    <ul type = "circle">
      <li><i class="material-icons small">report_problem</i>
      <strong>Error al realizar la operación:</strong></li>
      <% resource.errors.full_messages.each do |message| %>
        <li><i class="material-icons tiny">error</i><%= message %></li>
      <%end%>
    </ul>
  </div>
<% end %>

	<div class="input-field">
		<%= f.label :email %><br />
		<%= f.email_field :email, autofocus: true %>
	</div>

	<div class="action center">
		<%= f.submit "Enviar correo para restablecer contraseña", class: 'btn' %>
	</div>
	<% end %>
</div>
<div class="center top-space">
	<%= render "devise/shared/links" %>
</div>
