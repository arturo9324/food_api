<h2>Actualizar contraseña</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

<% if resource.errors.any? %>
  <div class="alert">
    <ul type = "circle">
      <li><i class="material-icons small">report_problem</i>
      <strong>Error al realizar la operación:</strong></li>
      <% resource.errors.full_messages.each do |message| %>
        <li><i class="material-icons tiny">error</i><%= message %></li>
      <%end%>
    </ul>
  </div>
<% end %>

<div class="input-field">
  <%= f.label :password, "Nueva contraseña" %><br />
  <%= f.password_field :password, autocomplete: "off" %>
  <% if @minimum_password_length %>
  <br />
  <em>(Caracteres mínimos: <%= @minimum_password_length%>)</em>
  <% end %>
</div>

<div class="input-field">
  <%= f.label :password_confirmation, "Confirma tu nueva contraseña" %><br />
  <%= f.password_field :password_confirmation, autocomplete: "off" %>
</div>

<div class="input-field">
  <%= f.label :current_password, "Contraseña actual" %><br />
  <%= f.password_field :current_password, autocomplete: "off" %>
</div>

<div class="action center">
  <%= f.submit "Actualizar", class: "btn" %>
</div>
<% end %>