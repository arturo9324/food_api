
<div class="card big-padding form">
  <h2>Actualizar contraseña</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="input-field">
    <%= f.label :password, "Nueva contraseña" %><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
    <br />
    <em>(Caracteres mínimos: <%= @minimum_password_length%>)</em>
    <% end %>
  </div>

  <div class="input-field">
    <%= f.label :password_confirmation, "Confirma tu nueva contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="input-field">
    <%= f.label :current_password, "Contraseña actual" %><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="action center">
    <%= f.submit "Actualizar", class: "btn" %>
  </div>
  <% end %>
</div>
<div class="center top-space">
  <%= link_to "Atras", :back%>
</div>
